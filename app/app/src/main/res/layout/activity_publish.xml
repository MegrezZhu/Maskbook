<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="com.zyuco.maskbook.PublishActivity">

    <ImageView
        android:id="@+id/imagepick"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_camera_enhance_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/seekbar"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/content"
        />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/floating_label_content"
        android:layout_margin="20dp"
        android:lines="5"
        android:gravity="start"
        app:met_floatingLabel="normal"
        app:met_floatingLabelTextSize="16sp"
        app:met_floatingLabelText="@string/floating_label_content"
        app:met_clearButton="true"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/publish"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/publish"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:theme="@style/AppTheme.Button"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
